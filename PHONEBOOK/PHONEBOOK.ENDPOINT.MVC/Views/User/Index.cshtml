@model List<Appuser>
@{
    ViewData["Title"] = "Index";
}



@if (Model.Count != 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                @*<th scope="col">#</th>*@
                <th scope="col">User Name</th>
                <th scope="col">id</th>
                <th scope="col">Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<th scope="row">1</th>*@
                    <td>@item.UserName</td>
                    <td>@item.Id</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-controller="people"
                           asp-action="showDetial"
                           asp-route-id="@item.Id">Show Details</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2> کاربری یافت نشد</h2>
}




